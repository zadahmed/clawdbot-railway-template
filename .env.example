# OpenClaw/ClawdBot Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# AI Provider (Required - at least one)
# ===================
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ===================
# Chat Platform Integrations (Optional)
# ===================
TELEGRAM_BOT_TOKEN=
DISCORD_BOT_TOKEN=
SLACK_BOT_TOKEN=
WHATSAPP_SESSION=

# ===================
# Database Configuration (Optional - Railway auto-configures)
# ===================
DATABASE_URL=
REDIS_URL=

# ===================
# Server Configuration
# ===================
PORT=3000
NODE_ENV=production

# ===================
# Feature Flags
# ===================
ENABLE_BROWSER_AUTOMATION=true
ENABLE_FILE_ACCESS=true
ENABLE_SHELL_COMMANDS=false
